<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_profile"
    tools:context=".ProfileActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="174dp"
        android:layout_marginTop="359dp"
        android:layout_marginEnd="179dp"
        android:layout_marginBottom="353dp"
        android:text="ПРОФИЛЬ"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/buttonLeftProfile"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="500dp"
        android:alpha="0.25"
        android:background="@drawable/button_oval"
        android:backgroundTintMode="src_in"
        app:layout_constraintCircle="@+id/mainButtonProfile"
        app:layout_constraintCircleAngle="300"
        app:layout_constraintCircleRadius="120dp"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/mainButtonProfile"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="600dp"
        android:alpha="0.25"
        android:background="@drawable/button_oval"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/buttonRightProfile"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="65dp"
        android:layout_marginTop="500dp"
        android:layout_marginEnd="50dp"
        android:alpha="0.25"
        android:background="@drawable/button_oval"
        android:backgroundTintMode="src_in"
        app:layout_constraintCircle="@+id/mainButtonProfile"
        app:layout_constraintCircleAngle="60"
        app:layout_constraintCircleRadius="120dp"
        tools:ignore="SpeakableTextPresentCheck" />
</androidx.constraintlayout.widget.ConstraintLayout>